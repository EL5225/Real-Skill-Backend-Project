    "/payments": {
      "post": {
        "tags": ["payments"],
        "summary": "create new payment",
        "description": "create new payment.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "payment_method": {
                    "type": "string",
                    "description": "Metode pembayaran yang digunakan."
                  },
                  "class_id": {
                    "type": "string",
                    "description": "ID kelas yang akan dibayar."
                  }
                },
                "required": ["payment_method", "class_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pembayaran berhasil dibuat."
          },
          "400": {
            "description": "Permintaan tidak valid."
          }
        }
      }
    },

    "/auth/register": {
      "post": {
        "tags": ["auth"],
        "summary": "create new user",
        "description": "register a new user",
        "operationId": "post-register-user",
        "requestBody": {
          "$ref": "#/components/requestBodies/CreateUser"
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/BasicResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string",
                              "example": "realskills"
                            },
                            "email": {
                              "type": "string",
                              "example": "l@gmail.com"
                            },
                            "role": {
                              "type": "string",
                              "example": "USER"
                            },
                            "createdAt": {
                              "type": "string",
                              "format": "date-time",
                              "example": "2022-01-01T00:00:00.000Z"
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
