  "components": {
    "schemas": {
      "BasicResponse": {
        "title": "BasicResponse",
        "type": "object",
        "properties": {
          "status": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "OK!"
          }
        }
      },
      "UserModel": {
        "title": "UserModel",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "realskills"
          },
          "email": {
            "type": "string",
            "example": "l@gmail.com"
          }
        }
      },
      "Pagination": {
        "title": "Pagination",
        "type": "object",
        "properties": {
          "links": {
            "type": "object",
            "properties": {
              "next": {
                "type": "string",
                "example": ""
              },
              "prev": {
                "type": "string",
                "example": ""
              }
            }
          },
          "totalItems": {
            "type": "number"
          }
        }
      }
    },
    "securitySchemes": {
